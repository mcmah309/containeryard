{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "yard.yaml Schema",
  "type": "object",
  "properties": {
    "inputs": {
      "type": "object",
      "properties": {
        "paths": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "type": "string"
          }
        },
        "remotes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "format": "uri"
              },
              "commit": {
                "type": "string"
              },
              "paths": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              }
            },
            "required": [
              "url",
              "commit",
              "paths"
            ],
            "additionalProperties": false
          }
        }
      },
      "anyOf": [
        {
          "required": [
            "paths"
          ]
        },
        {
          "required": [
            "remotes"
          ]
        }
      ]
    },
    "outputs": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "array",
        "items": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "additionalProperties": {
                "oneOf": [
                  {
                    "type": "object",
                    "properties": {
                      "version": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": {
                      "type": "string"
                    }
                  },
                  {
                    "type": "null"
                  }
                ]
              }
            }
          ]
        }
      }
    }
  },
  "required": [
    "inputs",
    "outputs"
  ],
  "additionalProperties": false
}
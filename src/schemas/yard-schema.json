{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "yard.yaml Schema",
  "type": "object",
  "properties": {
    "inputs": {
      "type": "object",
      "properties": {
        "paths": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "type": "string"
          }
        },
        "remotes": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "format": "uri"
              },
              "ref": {
                "type": "string"
              },
              "paths": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              }
            },
            "required": [
              "url",
              "ref",
              "paths"
            ]
          }
        }
      },
      "anyOf": [
        {
          "required": [
            "paths"
          ]
        },
        {
          "required": [
            "remotes"
          ]
        }
      ]
    },
    "outputs": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "object",
        "minProperties": 1,
        "additionalProperties": {
          "oneOf": [
            {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            },
            {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ]
            }
          ]
        }
      }
    }
  },
  "required": [
    "inputs",
    "outputs"
  ]
}
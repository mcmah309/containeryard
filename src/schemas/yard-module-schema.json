{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "yard-module.yaml Schema",
    "type": "object",
    "properties": {
      "description": {
        "type": "string",
        "description": "This is a modules description"
      },
      "args": {
        "type": "object",
        "properties": {
          "required": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          "optional": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "anyOf": [
          {
            "required": ["optional"]
          },
          {
            "required": ["required"]
          }
        ]
      }
    },
    "required": ["description"],
    "additionalProperties": false
  }